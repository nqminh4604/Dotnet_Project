@model Dotnet_Project.Models.Lesson
@{
    ViewData["Title"] = "Add Lesson";
    Layout = "../Shared/_AdminLayout.cshtml";
}
<h1 class="text-2xl font-bold text-text-color mb-4">Add New Lesson</h1>
@if (ViewBag.AllErrors != null && ((List<string>)ViewBag.AllErrors).Count > 0)
{
    <div class="bg-red-100 text-red-700 p-2 mb-4 rounded">
        <ul>
            @foreach (var err in (List<string>)ViewBag.AllErrors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}
<form asp-action="Create" method="post" class="max-w-lg bg-white p-6 rounded shadow">
    <div class="mb-4">
        <label asp-for="Title" class="block font-semibold mb-1">Title</label>
        <input asp-for="Title" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="ChapterId" class="block font-semibold mb-1">Chapter</label>
        <select asp-for="ChapterId" class="w-full border rounded px-3 py-2" asp-items="ViewBag.ChapterId"></select>
        <span asp-validation-for="ChapterId" class="text-red-500 text-sm"></span>
    </div>
    <div class="flex justify-end gap-2">
        <a asp-action="List" class="bg-gray-400 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">Cancel</a>
        <button type="submit" class="bg-text-color hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Save</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
