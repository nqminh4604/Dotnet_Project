@{
    ViewBag.HideNavbar = true;
}

@model dynamic
@{
    ViewData["Title"] = "Login";
}
@if (TempData["LogoutMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">@TempData["LogoutMessage"]</div>
}
<div class="relative flex flex-col h-screen w-full overflow-hidden">
    <div class="fixed inset-0 -z-10">
        <img src="/images/loginBackgroundMobile.svg"
             alt="Mobile Background"
             class="block md:hidden w-full h-full object-cover object-center" />
        <img src="/images/loginBackground.svg"
             alt="Desktop Background"
             class="hidden md:block w-full h-full object-cover object-center" />
    </div>
    <main class="relative min-h-screen w-full justify-center items-center">
        <div class="relative z-10 top-[23%] md:top-[200px] left-[7%] md:left-[10%]">
            <h1 class="text-3xl md:text-5xl text-text-color font-bold mb-10">Welcome !</h1>
            <form asp-controller="Account" asp-action="Login" method="post" class="flex flex-col">
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })
                <div class="flex">
                    <div class="flex flex-col gap-6 relative">
                        <span class="absolute left-4 md:left-5 md:top-[30px] top-[34%] transform -translate-y-1/2 h-5 w-5 md:h-8 md:w-8 text-text-color">
                            <!-- UserIcon SVG -->
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.5 20.25a8.25 8.25 0 1115 0v.41a.34.34 0 01-.34.34H4.84a.34.34 0 01-.34-.34v-.41z" />
                            </svg>
                        </span>
                        <input name="userName" placeholder="Username" class="form-control w-[270px] md:w-[500px] pl-12 py-2 border rounded-full text-lg text-text-color" type="text" required />
                        <span class="absolute left-4 md:left-5 md:top-[90px] top-[58%] transform -translate-y-1/2 h-5 w-5 md:h-8 md:w-8 text-text-color">
                            <!-- LockClosedIcon SVG -->
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V7.5a4.5 4.5 0 10-9 0v3m12 0A2.25 2.25 0 0119.5 12.75v6A2.25 2.25 0 0117.25 21H6.75A2.25 2.25 0 014.5 18.75v-6A2.25 2.25 0 016.75 10.5h10.5z" />
                            </svg>
                        </span>
                        <input name="password" placeholder="Password" class="form-control w-[270px] md:w-[500px] pl-12 py-2 border rounded-full text-lg text-text-color" type="password" required />
                    </div>
                    <button class="md:ml-[50px] flex-shrink-0 mt-[20px] ml-[50px]"
                            style="animation: bounceHorizontal 1s infinite"
                            type="submit">
                        <!-- ChevronRightIcon SVG -->
                        <svg class="w-12 h-12 md:w-20 md:h-20 text-background-color bg-text-color rounded-full p-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>
                </div>
                <div class="mt-[34px] md:mt-8 flex flex-col md:flex-row md:justify-between md:w-[490px] gap-4">
                    <a class="text-white font-semibold relative pb-1 group transition-all duration-300 hover:text-opacity-90">
                        Forgot password ?
                        <span class="absolute bottom-0 left-0 w-0 h-px bg-white transition-all duration-300 hidden md:block group-hover:w-full"></span>
                    </a>
                    <p class="text-white font-semibold ">
                        Don't have an account ?
                        <a href="/Account/Register"
                           class="text-text-color sm:ml-1 relative group transition-all duration-300 hover:text-text-color/90">
                            Sign up
                            <span class="absolute bottom-0 left-0 w-0 h-px bg-text-color transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </main>
    <div class="container mx-auto p-4"></div>
</div>