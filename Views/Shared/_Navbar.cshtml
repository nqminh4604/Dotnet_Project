@* Sidebar navigation partial with Heroicons and custom colors using Tailwind and your palette *@
@{
    var currentPath = Context.Request.Path.Value?.ToLower();
    Func<string, string> NavClass = path => currentPath == path.ToLower() ? "bg-white text-text-color font-bold" : "hover:bg-white/10 text-white";
}
<div class="flex flex-col items-center p-2 bg-text-color rounded-xl h-[96vh] m-2 w-[80px]">
    <a asp-controller="User" asp-action="Index" class="mb-4 flex flex-col items-center p-2 w-[67px] rounded-xl transition-all @NavClass("/user/index")">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.5 20.25a8.25 8.25 0 1115 0v.41a.34.34 0 01-.34.34H4.84a.34.34 0 01-.34-.34v-.41z" />
        </svg>
        <span class="text-[10px] mt-1">My profile</span>
    </a>
    <div class="flex flex-col gap-4 flex-1 justify-center">
        <a asp-controller="Course" asp-action="Index" class="flex flex-col items-center p-2 w-[67px] rounded-xl transition-all @NavClass("/course/index")">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
            </svg>
            <span class="text-[10px] mt-1">Courses</span>
        </a>
        <a asp-controller="User" asp-action="Courses" class="flex flex-col items-center p-2 w-[67px] rounded-xl transition-all @NavClass("/user/courses")">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5v9.75A2.25 2.25 0 005.25 19.5h13.5A2.25 2.25 0 0021 17.25V7.5M3 7.5V6.75A2.25 2.25 0 015.25 4.5h13.5A2.25 2.25 0 0121 6.75V7.5m-18 0h18" />
            </svg>
            <span class="text-[10px] mt-1">My courses</span>
        </a>
    </div>
    <form asp-controller="Account" asp-action="Logout" method="post" class="w-full">
        <button type="submit" class="mt-auto flex flex-col items-center p-2 w-[67px] rounded-xl transition-all text-red-600 hover:bg-white/10" style="background:none;border:none;">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-3A2.25 2.25 0 008.25 5.25V9m7.5 0h-15m15 0v10.5A2.25 2.25 0 0118.75 21H5.25A2.25 2.25 0 013 19.5V9m15 0V5.25A2.25 2.25 0 0013.5 3h-3A2.25 2.25 0 008.25 5.25V9" />
            </svg>
            <span class="text-[10px] mt-1">Logout</span>
        </button>
    </form>
</div>
