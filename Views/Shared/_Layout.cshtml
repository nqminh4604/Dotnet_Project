@* Main layout for the application using Tailwind and your color palette *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dotnet_Project</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'background-color': '#c2d6ff',
                        'text-color': '#02457A',
                        'light-background': '#eef1f9',
                        'dark-text': '#001B48',
                    }
                }
            }
        }
    </script>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light-background">
    <div class="flex">
        @await Html.PartialAsync("_Navbar")
        <main class="flex-1">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
